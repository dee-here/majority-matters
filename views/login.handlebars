<div class="row justify-space-between-md">
    <form class="form login-form">
      <div class="card">
        <div class="card-content">
          <h2 class="page-title">Login</h2>
          <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-control" type="text" id="username-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <div class="form-group mt-2 mb-2">
            <button class="btn btn-primary" type="submit">login</button>
          </div>
          <a class="login-link" href="#" >Signup instead.</a>
        </div>
      </div>
    </form>
    <form class="form signup-form hide-display">
      <div class="card">
        <div class="card-content">
          <h2 class="page-title">Signup</h2>
          <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-control" type="text" id="username-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-control" type="password" id="password-signup" />
          </div>
          <div class="form-group mt-2 mb-2">
            <button class="btn btn-primary" type="submit">signup</button>
          </div>
          <a class="login-link" href="#">Login instead.</a>
        </div>
      </div>
    </form>
</div>

