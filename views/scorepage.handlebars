<div class="container m-2 col-3">
    <div class="row">
        <h1>High Scores</h1>
        {{#each highScores as |score|}}
            {{> display-high-score}}
        {{/each}}
    </div>
</div>

<div class="position-absolute" style="bottom: 20px; right: 20px;">
    <a href="/"><button type="button" class="btn btn-dark btn-lg">Play Again</button></a>
</div>

<div class="container m-2 col-4">
    <div class="row">
        {{#if team1}}
        {{!-- {{#with user1}}
        {{json this}}
        {{/with}}
        {{#with user2}}
        {{json this}}
        {{/with}} --}}
        {{!-- {{teamScore user1}} --}}
        {{!-- {{teamScore user2}} --}}
        {{!-- {{equal user1 user2}} --}}
            {{#if (equal user1 user2)}}
            <h1> Teams Tied </h1>
            <h2> Team 1 Score: {{teamScore user1}}</h2>
            <h2> Team 2 score: {{teamScore user2}}</h2>
            {{else if (compare user1 user2)}}
            <h1> Team 1 Wins</h1>
            <h2> Team 1 Score: {{teamScore user1}}</h2>
            <h2> Team 2 Score: {{teamScore user2}}</h2>
            {{else}}
            <h1> Team 2 Wins</h1>
            <h2> Team 1 Score: {{teamScore user1}}</h2>
            <h2> Team 2 Score: {{teamScore user2}}</h2>
            {{/if}}
        {{else}}
        <h1>Score: {{score}} </h1>
        {{/if}}
        <h1>Question: {{questionTitle}}</h1>
        <h1>Answers : </h1>
        {{#if isGenreMemes}}
            {{#each answers as |answer|}}
                {{> display-memes}}
                <p>Total: {{total}}</p>
                <br/><br/>
            {{/each}}
        {{else}}
            {{#each answers as |answer|}}
                {{> display-answer}}
            {{/each}}
        {{/if}}                  
        </div>
</div>